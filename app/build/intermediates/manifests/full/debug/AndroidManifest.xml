<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gw.swipebacksample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.gw.swipebacksample.MainApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.gw.swipebacksample.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.swipebacksample.activity.CommonActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.WxCommonActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.CommonAttachToActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.ScrollViewActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.HorizontalScrollViewActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.NestedScrollViewActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.ListViewActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.RecyclerViewActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.ViewPagerActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.WebViewActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="com.gw.swipebacksample.activity.SwipeRefreshLayoutActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="25.4.0" />
    </application>

</manifest>